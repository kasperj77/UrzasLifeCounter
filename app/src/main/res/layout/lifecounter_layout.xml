<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Life"
            android:id="@+id/yourLife"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:id="@+id/yourLifeTotal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="80dp"
            android:layout_below="@+id/yourLife"
            android:layout_toRightOf="@+id/increaseYourLife"
            android:layout_toEndOf="@+id/increaseYourLife"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 1"
            android:id="@+id/increaseYourLife"
            android:layout_below="@+id/yourLife"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 1"
            android:id="@+id/decreaseYourLife"
            android:layout_below="@+id/increaseYourLife"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Energy"
            android:id="@+id/yourEnergy"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poison"
            android:id="@+id/yourPosion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/yourEnergyCounter"
            android:layout_alignLeft="@+id/yourEnergy"
            android:layout_alignStart="@+id/yourEnergy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/yourEnergyCounter"
            android:layout_below="@+id/yourEnergy"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            android:layout_alignRight="@+id/yourPosion"
            android:layout_alignEnd="@+id/yourPosion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/yourPoisonCounter"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            android:layout_below="@+id/yourPosion"
            android:layout_alignRight="@+id/yourEnergy"
            android:layout_alignEnd="@+id/yourEnergy" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 1"
            android:id="@+id/increaseYourEnergy"
            android:layout_alignBottom="@+id/yourEnergyCounter"
            android:layout_toLeftOf="@+id/decreaseYourPoison"
            android:layout_toStartOf="@+id/decreaseYourPoison" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 1"
            android:id="@+id/decreaseYourEnergy"
            android:layout_toRightOf="@+id/increaseYourEnergy"
            android:layout_toEndOf="@+id/increaseYourEnergy"
            android:layout_alignTop="@+id/increaseYourEnergy" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 1"
            android:id="@+id/increaseYourPoison"
            android:layout_below="@+id/yourPosion"
            android:layout_alignLeft="@+id/increaseYourEnergy"
            android:layout_alignStart="@+id/increaseYourEnergy" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 1"
            android:id="@+id/decreaseYourPoison"
            android:layout_alignTop="@+id/increaseYourPoison"
            android:layout_alignLeft="@+id/yourLife"
            android:layout_alignStart="@+id/yourLife" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">

    </RelativeLayout>


</LinearLayout>